            .radio-button-title
              Аренда

          .operation-lab
            %input#by_all2{'ng-model' => 'search.operation', :type => 'radio', :value => '1'}/
            %label.blue{:for => "by_all2"}
            .radio-button-title
              Продажа
        -#.dropdown-operation

          -#%select(chosen name="operation" style="width:100%;"
          -#ng-model='operation' ng-options="value.id as value.name for value in operations" data-placeholder="Операция")

        .dropdown-city
          .regins-select-left
            .btn-toolbar
              .demo{"ng-repeat" => "btn in btns"}
