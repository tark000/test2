          -#    %option(ng-repeat='city in region.cities' ng-cloak value='{{city.id}}')
          -#      {{city.name}}

    .filter-right-part
      .price-area
        .filter-price
          .input-price
            .float-left.price-text
              %label.right.inline Цена:
            .float-left.price-input1
              %input(ng-model='search.price_min' ng-maxlength='8' ng-minlength='1' ng-init='check=true' ng-change='check=!true' ng-pattern='/[0-9]/' placeholder='От'  value="{{price_min}}" ){:type => 'text'}
            .float-left.price-text
              %label.right.inline -
            .float-left.price-input2
              %input(ng-model='search.price_max' ng-maxlength='8' ng-minlength='1' ng-change='check=!true' ng-pattern='/[0-9]/' placeholder='До' value="{{price_max}}" ){:type => 'text'}
          .radio-button-price

            %input#by_all3{'ng-model' => 'search.by_all', :type => 'radio', :value => '1'}
            %label.blue{:for => "by_all3"}
            -#%small
            .radio-button-title
              Общая
            %br

            %input#by_all4{'ng-model' => 'search.by_all', :type => 'radio', :value => '0'}/
