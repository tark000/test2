                    %img{"ng-src" => "{{slides[2].imageSmall}}", :style => "width:100px;", "ng-click" => "showImageId(2)"}
                    {{slider.imageSlider}}
                %li.list-image(ng-show="{{slides.length > 3}}")
                  %a.thumbnail
                    %img{"ng-src" => "{{slides[3].imageSmall}}", :style => "width:100px;", "ng-click" => "showImageId(3)"}
                    {{slider.imageSlider}}


                %li.list-image.down{ "ng-click" => "showNext()"}

                  .triangle-down




