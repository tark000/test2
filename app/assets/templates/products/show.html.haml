    .tab


      %tabset
        %tab{:heading => "Фото"}
          .row
            .col-sm-10
              .container1.slider

                %img.slide{"ng-repeat" => "slide in slides", "ng-show" => "isActive($index)", "ng-src" => "{{slide.imageSlider}}", "ng-swipe-left" => "showNext()", "ng-swipe-right" => "showPrev()"}

                %a.arrow.prev{ "ng-click" => "showPrev()"}
                %a.arrow.next{ "ng-click" => "showNext()"}
                -#%a.arrow.prev.hidden-xs{ "ng-click" => "showPrev()"}
                -#%a.arrow.next.hidden-xs{ "ng-click" => "showNext()"}



            .col-sm-2.hidden-xs

              -# if sliders >= 5
              %ul.list-image-ul(ng-show="{{slides.length >= 5}}")
                %li.list-image.up{ "ng-click" => "showPrev()"}
                  .triangle-up
                %li.list-image
                  %a.thumbnail
                    %img{"ng-src" => "{{slides[image5].imageSmall}}", :style => "width:100px;", "ng-click" => "showNextTwo()"}
                    {{slider.imageSlider}}
                %li.list-image
                  %a.thumbnail

                    %img{"ng-src" => "{{slides[image4].imageSmall}}", :style => "width:100px;",  "ng-click" => "showNext()"}
                    {{slider.imageSlider}}
                %li.list-image
                  %a.thumbnail
                    %img{"ng-src" => "{{slides[image3].imageSmall}}", :style => "width:100px;", "ng-click" => "imageSlider(currentImage)"}
                    {{slider.imageSlider}}
                %li.list-image
                  %a.thumbnail
                    %img{"ng-src" => "{{slides[image2].imageSmall}}", :style => "width:100px;", "ng-click" => "showPrev()"}
                    {{slider.imageSlider}}
                %li.list-image
                  %a.thumbnail
                    %img{"ng-src" => "{{slides[image1].imageSmall}}", :style => "width:100px;", "ng-click" => "showPrevTwo()"}
                    {{slider.imageSlider}}

                %li.list-image.down{ "ng-click" => "showNext()"}

                  .triangle-down

              %ul.list-image-ul(ng-show="{{slides.length < 5}}")
                %li.list-image.up{ "ng-click" => "showPrev()"}
                  .triangle-up
                %li.list-image(ng-show="{{slides.length > 0}}")
                  %a.thumbnail
                    %img{"ng-src" => "{{slides[0].imageSmall}}", :style => "width:100px;", "ng-click" => "showImageId(0)"}
                    {{slider.imageSlider}}
                %li.list-image(ng-show="{{slides.length > 1}}")

                  %a.thumbnail

                    %img{"ng-src" => "{{slides[1].imageSmall}}", :style => "width:100px;",  "ng-click" => "showImageId(1)"}
                    {{slider.imageSlider}}
                %li.list-image(ng-show="{{slides.length > 2}}")
